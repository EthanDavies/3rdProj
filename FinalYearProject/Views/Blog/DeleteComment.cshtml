@model FinalYearProject.Models.CommentViewModel

@{
    ViewBag.Title = "Delete Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("DeleteComment", "Blog", FormMethod.Post, new { @role = "form" }))

{
    @Html.AntiForgeryToken()
    <div class="delacccont">
        <div class="delaccgrp">
            <div class="delacclbl" style="text-align:left;">Are you sure?</div>
        </div>
        <div class="delaccgrp">
            <input type="hidden" value="@Model.Id" name="commentid" />
            <input type="submit" value="Delete Comment" class="btn btn-default delaccbtn" />
        </div>
    </div>
}

